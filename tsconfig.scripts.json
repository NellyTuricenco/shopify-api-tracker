      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "dist/scripts",
      "rootDir": "scripts",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleDetection": "force",
      "strict": true
